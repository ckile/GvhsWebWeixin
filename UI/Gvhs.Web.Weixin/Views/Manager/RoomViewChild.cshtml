<div ng-controller="roomviewchildController as vm">
    <div class="widget bg-white">
        <ul class="media-list media-list-with-divider">
            <li class="media media-sm">
                <div class="text-center">
                    <h6>住客姓名</h6>
                </div>
                <h2 class="text-center color1">{{vm.name}}</h2>
            </li>
            <li class="media media-sm">
                <div class="text-center">
                    <h6>房号</h6>
                </div>
                <h2 class="text-center color1">{{vm.rmNum}}</h2>
            </li>
            <li class="media media-sm">
                <div class="text-center">
                    <h6>房型</h6>
                </div>
                <h2 class="text-center color1">{{vm.rmType}}</h2>
            </li>
            <li class="media media-sm">
                <div class="text-center">
                    <h6>房价</h6>
                </div>
                <h2 class="text-center color1"><small>￥</small>{{vm.rate}}</h2>
            </li>
            <li class="media media-sm">
                <a href="javascript:;" id="changeRoomView" class="btn btn-primary center-block" ng-click="vm.changeRoomView()"><h5 class="text-white">改房态</h5></a>
            </li>
            <li class="media media-sm">
                <a href="javascript:;" class="btn btn-primary center-block" ng-click="#"><h5 class="text-white">房价调整</h5></a>
            </li>
            <li class="media media-sm">
                <a href="javascript:;" class="btn btn-primary center-block" ng-click="#"><h5 class="text-white">房价折扣</h5></a>
            </li>
            <li class="media media-sm">
                <a href="javascript:;" class="btn btn-primary center-block" ng-click="vm.back()"><h5 class="text-white">返回房态图</h5></a>
            </li>
        </ul>
    </div>
</div>
